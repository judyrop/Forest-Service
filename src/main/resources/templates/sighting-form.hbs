{{#partial "content"}}
            <h1>Sighting Form</h1>
            <form action="/heroes/new" method="post">
                <div class="form-group">
                    <label for="animalId">Animal Id</label>
                    <input id="id" name="animalId" type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input id="location" name="location" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="rangerName">Ranger Name</label>
                    <input id="rangerName" name="rangerName" type="text" class="form-control">
                </div>

        <button type="submit" class="btn btn-primary">Add sighting</button>
    </form>

{{/partial}}

